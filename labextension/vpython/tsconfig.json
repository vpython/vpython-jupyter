
{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["es6", "ES5", "ES2015.Promise", "DOM"],
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": false,
    "target": "es6",
    "types": []
  },
  "include": ["src/*"]
}
